<p id="notice"><%= notice %></p>

<h1>Tipos de mesa</h1>

<table class="table table-sm table-hover table-striped" >
  <thead>
    <tr>
      <th>Nome</th>
      <th style="text-align: center">Alterar</th>
      <th style="text-align: center">Excluir</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.name %></td>
        <td style="text-align: center" ><%= link_to edit_type_path(type) do %>
          <%= fa_icon "edit", base: "square" %>
        <% end %>
        </td>
        <td style="text-align: center" >
          <%= link_to type_path(type), method: :delete, data: { confirm: 'Are you sure?' } do %>
            <%= fa_icon "trash", base: "square" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to t('Home'), root_path, class: "btn btn-primary btn-sm"  %>
<%= link_to 'Incluir', new_type_path, class: "btn btn-primary btn-sm" %>
